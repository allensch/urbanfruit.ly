<form class="LoginForm">
    <fieldset>

        <label for="inputEmail">Email address</label>
        <input id="inputEmail" class="input-block-level" type="text">

        {{#if view.forgotPassword}}

        <button type="submit" class="btn btn-info">Submit</button>
        <button class="btn btn-link" {{ action "clickCancelForgotPassword" target="view" }}>Cancel</button>

        {{else}}

        <label for="inputPassword">Password</label>
        <input id="inputPassword" class="input-block-level" type="password">

        <label class="checkbox">
            <input type="checkbox">
            <span>Remember me</span>
        </label>
        <button type="submit" class="btn">Sign in</button>

        <button class="btn btn-link" {{ action "clickForgotPassword" target="view" }}>Forgot password?</button>
        <button class="btn btn-link" {{ action "clickCreateAccount" target="view" }}>Create account</button>


        <button class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Sign in with Facebook</button>
        <button class="btn btn-google-plus btn-block"><i class="icon-google-plus-sign"></i> Sign in with Google+</button>

        {{/if}}

    </fieldset>
</form>