

<div class="container">

    {{#if isLoggedIn}}
        <p>
            <div class="well">
                <h1>You are already logged in.</h1>
                <button class="btn" {{action logout}}>Logout</button>
            </div>
        </p>

    {{else}}
        {{#if errorMessage}}
            <div class="alert alert-error">{{errorMessage}}</div>
        {{/if}}

        <!-- Place Holder for social media login -->
        <div class="well-small">
            Login using a social network:<br/>
            <a class="btn"><img src="img/FB-f-Logo__blue_50.png"/> Facebook</a>
        </div>


        <!-- Simple Login -->
        <div class="well-small">
            <form {{action login on="submit"}}>
                {{input value=username type="text" placeholder="Username"}}<br/>
                {{input value=password type="password" placeholder="Password"}}<br/>
                {{input class="btn" type="submit" value="Log In"}}
            </form>
        </div>


    {{/if}}

</div>