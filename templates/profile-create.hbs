

<div id="profile-div" class="container-fluid">

    <div class="row">
        <!-- left column -->
        <div class="span2 offset2">
            <span>Profile Picture</span><br/>
            {{view App.DndImageUploadView valueBinding=profilePic srcBinding=profileSrc}}<br/>
            <input id="file-select" type="file" multiple="false" /><br/>

            <div id="file-upload-progress" class="progress hide">
                <div class="bar" style="width: 0%;"></div>
            </div>
        </div>



        <!-- Right column -->
        <div class="span6 offset2">

            <p>
                <label for="profile-bio">About:</label>
                {{textarea id="profile-bio" placeholder="Write a short bio of yourself." value=bio}}
            </p>


            <p>
                <button class="btn btn-primary" {{action createProfile}}>Create</button>
            </p>
        </div>
    </div>

</div>

