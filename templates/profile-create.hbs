

<div id="profile-div" class="container-fluid">

        <div class="row">

            <div class="span2 offset2">
                <span>Profile Picture</span><br/>
                {{view App.DndImageUploadView}}<br/>
                {{input type="file"}}
            </div>

            <!-- Right column -->
            <div class="span6 offset2">

                <p>
                    <label for="profile-bio">About:</label>
                    {{textarea id="profile-bio" placeholder="Write a short bio of yourself."}}
                </p>

                <p>
                    {{input type="submit" class="btn btn-primary"}}
                </p>

            </div>
        </div>

</div>

